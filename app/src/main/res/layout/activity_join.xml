<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".JoinActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회 원 가 입"
        android:textColor="#4682B4"
        android:textSize="28sp"
        android:textStyle="normal"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        android:weightSum="1"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:gravity="end"
            android:text="이름"
            android:textColor="#4682B4"
            android:textStyle="normal"
            android:layout_marginRight="30dp"/>

        <EditText
            android:layout_width="0dp"
            android:id="@+id/edt_name"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:hint="실명을 입력하세요."
            android:backgroundTint="#B0E0E6"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight=".2"
            android:gravity="end"
            android:text="생년월일"
            android:textColor="#4682B4"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/edt_birthday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:hint="생년월일 입력 ex) 1999-02-28"
            android:backgroundTint="#B0E0E6"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:gravity="end"
            android:text="닉네임"
            android:textColor="#4682B4"
            android:textStyle="normal"
            android:layout_marginRight="30dp"/>

        <EditText
            android:id="@+id/edt_Nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:hint="닉네임 입력"
            android:backgroundTint="#B0E0E6"
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:gravity="end"
            android:text="비밀번호"
            android:textColor="#4682B4"
            android:textStyle="normal"
            android:layout_marginRight="30dp"/>

        <EditText
            android:id="@+id/edt_passwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:hint="비밀번호 입력"
            android:backgroundTint="#B0E0E6"
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight=".2"
            android:gravity="end"
            android:text="비밀번호\n확인"
            android:textColor="#4682B4"
            android:textStyle="normal"/>

        <EditText
            android:id="@+id/edt_passwd_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:hint="비밀번호 확인"
            android:backgroundTint="#B0E0E6"
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:gravity="end"
            android:text="아이디\n(이메일)"
            android:textColor="#4682B4"
            android:textStyle="normal"
            android:layout_marginRight="30dp"/>

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:hint="이메일주소"
            android:textSize="15dp"
            android:backgroundTint="#B0E0E6"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_check"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:layout_marginTop="18dp"
        android:text="회원가입하기"
        android:textColor="#4682B4"
        android:textSize="18dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.771"
        app:strokeColor="#B0E0E6"
        app:strokeWidth="1dp"
        tools:ignore="MissingConstraints" />

</LinearLayout>